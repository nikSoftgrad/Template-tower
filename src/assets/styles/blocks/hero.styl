.hero

	.main-bg
		background #f1f1f1 url('../images/hero-bg.png') center no-repeat
		background-size cover
		padding-top 180px
		padding-bottom 270px

		&__title
			font-size 30px
			max-width 262px

		&__subtitle
			font-size 30px
			font-weight 700
			margin 34px 0px

.button
	border none
	text-decoration none
	text-transform uppercase
	padding 25px 45px
	background-color #507fe1
	color #fff
	font-weight 700

	&-fitting
		padding 10px
		text-transform uppercase
		background #ffffff
		color #507fe1
		border none
		font-size 11px
		height 30px
			
	&-add
		background-color lighten(#507fe1,10%)
		padding 10px
		text-transform uppercase
		color	#ffffff
		background #507fe1
		border none
		font-size 11px
		height 30px
				 
	&-like
		text-transform uppercase
		background #507fe1
		border none
		height 30px 

.offer
	padding 129px 0px
	background-color #f1f1f1
	

	.container
		background-color #fff
		padding 80px
		margin-top -200px
		box-shadow 0 15px 25px rgba(0,0,0,0.1)
		background url('../../images/') position repeat

	&__title
		font-size 25px
		text-transform uppercase
		font-weight 500	
		margin-bottom 20px

	&__subtitle
		display block
		font-size 21px
		margin-bottom 48px

.form

	&__row
		display flex 
		align-items center
		max-width 900px
		
		&:not(:last-child)
			margin-bottom 25px

		.button
			margin-top 31px
			padding 28px 85px
	
	.input-label
		display block
		font-size 17px

	&__group
		flex-basis 33.33%	

.input
	height 80px
	padding-left 30px 
	width 100%
	border 1px solid #ddd

.input-row
	border-right none

	&:last-child
		border-right 1px solid #ddd

input[type="checkbox"]
	display none
	padding-left 60px

		&:checked + label:before
			background-color green

.check-label	
	display flex
	align-items center
	margin-right 40px
	position relative
	margin-left 40px

	&:before
		content ''
		width 30px
		height 30px
		border 1px solid #ddd	
		left -40px
		position absolute

section
	padding 100px 0px


.feature
	
	&__title
		margin-bottom 100px

.feature-block
	display flex
	justify-content space-between
	flex-wrap wrap

	&__item
		flex-basis 33%
		align-item center
		text-align center
		margin-bottom 100px

.title 
	text-transform uppercase
	font-size 30px
	font-weight 700px
	text-align center

.catalog
	background-color #f1f1f1

	&__title
		margin-bottom 100px

.catalog-block
	display flex
	justify-content space-between
	flex-wrap wrap

	&__item
		max-width 570px
		position relative
		margin-bottom 30px
		box-shadow 7px 5px 21px rgba(0,0,0,0.1)
		
	&__buttons
		display none
		position absolute
		bottom 0px
		right 0px
		z-index 1

		&:hover
			display flex
		

.tag
		position absolute
		top 10px
		left 10px
		font-size 12px
		text-trasform uppercase
		color #fff
		padding 10px
		background-color rgba(#507fe1,0.6)

.catalog-button
	text-align center
	margin-top 40px

	&__text
		margin-top 40px

.blog-header
	display flex 
	justify-content space-between
	margin-bottom 70px

	&__title
		font-size 24px
		font-weight 500
	
	&__link
		font-size 16px
		color #507fe1 
		text-decoration underline

.blog-list
	display flex 
	justify-content space-between

	&__item
		box-shadow 0 5px 10px rgba(0,0,0,0.08)
	&__blog-img
		overflow hidden
		height 200px
		margin-bottom 20px

	&__text
		min-height 80px
		display flex
		justify-content center
		align-items 0px


.price-block
	display flex
	flex-wrap wrap
	justify-content space-between

.price-card
	position relative
	background-color #fff

	&__text
		padding 20px
		
	&__title
		margin 0px
		font-size 15px
	
	&__cost
		font-weight 500

	&__pricetag
		display flex 
		justify-content space-between
		margin-bottom 24px	

	&__button
		text-align center
		position absolute
		bottom 0
		left 0 
		box-shadow 0 5px 5px rgba(0,0,0,0.05)
		background-color #fff
		height 100px
		padding 20px
		display none

		&:hover
			bottom 100px
			display block

.step

	&__title
		margin-bottom 100px

	&-block
		display flex 
		justify-content space-between

		&__item
			text-align center
			position relative
		
			&:before
				content ''
				width 85%
				height 2px
				background-color #7e7b78
				display block
				position absolute
				top 25%
				left 110px

		&__step-image
			height  60px

		&__title
			font-size 18px
			margin 20px 0px
		
		&__text
			max-width 160px

			