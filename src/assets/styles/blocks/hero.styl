.hero
  background-image url('../images/bg-hero-1.png')
  background-size cover
  background-position center
  padding 88px 0 58px

  .container
    display flex
    flex-direction column
    align-items flex-end
    width 100%

  &__input-wrap
    margin-top 75px
    width 100%

    +below(lg-breakpoint)
      display flex
      justify-content center

  &__content
    width calc(50% + 80px)
    text-align left

  &__title
    display flex
    flex-direction column
    align-items flex-start

    .custom-title + .custom-title
      margin-left 45px
      margin-top -5px

    & + .hero__description
      margin-top 45px

  &__description
    font-size 24px
    font-family font-family-reg
    line-height 1.2
    color #212121

    span
      font-family font-family-Xbold

    & + &
      margin-top 5px

  +below(lg-breakpoint)
    padding 20px 0

    &__description
      text-align center

    &__content
      width 100%
      display flex
      flex-direction column
      align-items center

    &__input-wrap
      margin 30px auto 0

  +below(xs-breakpoint)
    padding 40px 0 20px

    &__title
      width 100%

    .hero__title+.hero__description
      margin-top 22px

    .custom-title+.custom-title
      margin-left 30px
      margin-top 0

    &__description
      font-size 18px
      width 100%
      text-align left
      line-height 1.3

    &__input-wrap
      width 100%

.custom-title
  font-family font-family-Xbold
  color #fff
  position relative
  display flex

  span
    text-transform uppercase
    font-size 46px
    line-height 56px
    padding 5px 17px 0
    position relative

  &--light
    &:before
      content ''
      position absolute
      width 100%
      height 100%
      background #9ebde1
      border-radius 10px
      transform skew(-15deg)

  &--dark
    &:before
      content ''
      position absolute
      width 100%
      height 100%
      background #2a8cff
      border-radius 10px
      transform skew(-15deg)

  +below(lg-breakpoint)
    span
      font-size 35px
      line-height 45px

  +below(xs-breakpoint)
    span
      font-size 27px
      line-height 25px
      text-align center
      padding 5px 13px
