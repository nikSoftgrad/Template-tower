.main-bg
	background #f1f1f1 url('../images/hero-bg.png') no-repeat center top 60px
	background-size cover
	padding-top 180px
	padding-bottom 270px

	&__title
		font-size 30px
		max-width 262px

	&__subtitle
		font-size 30px
		font-weight 700
		margin 34px 0px
		max-width 820px

.button
	border none
	text-decoration none
	text-transform uppercase
	padding 25px 45px
	background-color #507fe1
	color #fff
	font-weight 700
	cursor pointer

	&:hover
		box-shadow 0 10px 25px rgba(0,0,0,0.2)

	&-fitting
		padding 10px
		text-transform uppercase
		background #ffffff
		color #507fe1
		border none
		font-size 11px
		height 30px
		cursor pointer
		&:hover
			transform scale(1.2)
			transition 0.4s
			
	&-add
		background-color lighten(#507fe1,10%)
		padding 10px
		text-transform uppercase
		color	#ffffff
		background #507fe1
		border none
		font-size 11px
		height 30px
		cursor pointer
		&:hover
			transform scale(1.2)
			transition 0.4s
				 
	&-like
		text-transform uppercase
		background #507fe1
		border none
		height 30px
		cursor pointer
		&:hover
			transform scale(1.2)
			transition 0.4s 

.offer
	padding 129px 0px
	background-color #f1f1f1
	

	.container
		background-color #fff
		padding 80px
		margin-top -200px
		box-shadow 0 15px 25px rgba(0,0,0,0.1)
		background url('../../images/') position repeat

	&__title
		font-size 25px
		text-transform uppercase
		font-weight 500	
		margin-bottom 20px

	&__subtitle
		display block
		font-size 21px
		margin-bottom 48px

.form

	&__row
		display flex 
		align-items center
		// justify-content space-between
		max-width 900px
		
		&:not(:last-child)
			margin-bottom 25px

		.button
			margin-top 31px
			padding 28px 85px
	
	.input-label
		display block
		font-size 17px

	&__group
		flex-basis 33.33%	

.input
	height 80px
	padding-left 30px 
	width 100%
	border 1px solid #ddd

.input-row
	border-right none

	&:last-child
		border-right 1px solid #ddd

input[type="checkbox"]
	display none
	padding-left 60px

	&:checked + label:before
		background-color #507fe1

.select
	height 80px
	padding-left 30px 
	width 100%
	border 1px solid #ddd
	position relative
	cursor pointer

	&:after
		content ''
		position absolute
		top 45%
		right 20px
		width 10px
		height 10px
		border 10px solid transparent 
		border-top 10px solid #bbb	

	&__select-checked
		line-height 80px
		display flex
		align-items center
		
	
	&__dropdown
		position absolute
		left 0
		top 79px
		width 100%
		background-color #fff
		border 1px solid #ddd
		margin 0
		list-style none
		display none
		z-index 10
		&_open
			display block
		
	&__option
		padding 20px

		&:hover
			background-color #f1f1f1

.check-label	
	display flex
	align-items center
	margin-right 40px
	position relative
	margin-left 40px
	cursor pointer

	&:before
		content ''
		width 30px
		height 30px
		border 1px solid #ddd	
		left -40px
		bottom 0px
		position absolute

section
	padding 100px 0px


.feature
	
	&__title
		margin-bottom 100px

.feature-block
	display flex
	justify-content space-between
	flex-wrap wrap
	align-items center

	&__item
		flex-basis 33%
		align-items center
		text-align center
		margin-bottom 100px
	
	&__img-feature
		margin-bottom 10px

.title 
	text-transform uppercase
	font-size 30px
	font-weight 700px
	text-align center
	font-family ProximaNova-Semibold

.catalog
	background-color #f1f1f1

	&__title
		margin-bottom 100px

.catalog-block
	display flex
	justify-content space-between
	flex-wrap wrap

	&__item
		max-width 570px
		position relative
		margin-bottom 30px
		box-shadow 7px 5px 21px rgba(0,0,0,0.1)

		&:hover
			.catalog-block__buttons
				display flex
				cursor pointer
		
	&__buttons
		cursor pointer
		position absolute
		bottom 0px
		right 0px
		z-index 1
		display none
		

.catalog-block__buttons
	cursor pointer

.tag
	position absolute
	top 10px
	left 10px
	font-size 12px
	text-trasform uppercase
	color #fff
	padding 10px
	background-color rgba(#507fe1,0.6)

.catalog-button
	display flex 
	flex-direction column
	align-items center
	justify-content center
	margin-top 40px
	cursor pointer
	text-align center

	&__button
		&:hover
			color #fff

	&__text
		display block
		margin-top 40px

.blog-header
	display flex 
	justify-content space-between
	margin-bottom 70px

	&__title
		font-family ProximaNova-Semibold
		font-size 24px
		font-weight 500
	
	&__link
		font-size 16px
		color #507fe1 
		text-decoration underline

.blog-list
	display flex 
	justify-content space-between
	align-items center
	flex-wrap wrap

	&__item
		box-shadow 0 5px 10px rgba(0,0,0,0.08)
		margin-bottom 20px

	&__blog-img
		overflow hidden
		height 200px

	&__text
		min-height 80px
		display flex
		justify-content center
		align-items center

.price

	&__title
		margin-bottom 100px

.price-block
	display flex
	flex-wrap wrap
	justify-content space-between

.price-card
	position relative
	background-color #fff
	box-shadow 0 5px 5px rgba(0,0,0,0.1)
	margin-bottom 10px

	&:hover
		.price-card__button
			bottom -80px
			display block
			z-index 1

	&__text
		padding 20px
		font-size 15px
		
	&__title
		margin 0
	
	&__cost
		font-weight 500

	&__pricetag
		display flex 
		justify-content space-between
		z-index 99

	&__button
		text-align center
		position absolute
		bottom 0
		left 0 
		box-shadow 0 5px 5px rgba(0,0,0,0.05)
		background-color #fff
		height 100px
		padding 20px
		display none
		width 100%
		z-index 2	
		

.step
	background-color #f1f1f1

	&__title
		margin-bottom 100px

	&-block
		display flex 
		justify-content space-between
		alingn-items center

		&__item
			text-align center
			position relative
			margin-bottom 20px

			&:last-child
				&:before
					display none
		
			&:before
				content ''
				width 75%
				height 2px
				background-color #7e7b78
				display block
				position absolute
				top 25%
				left 124px

		&__step-image
			width 50px
			height 50px

		&__title
			font-size 18px
			margin 20px 0px

.reviews
	background-color #f1f1f1

	&__title
		margin-bottom 100px

.slider-block
	display flex
	justify-content space-between	
	margin-bottom  100px

	&__item
		text-align center

	&__image
		display block
		width 70px
		height 70px
		border 2px solid #6a99e9
		border-radius 60%
		margin 20px auto

	&__text
		font-size 15px
		font-style	italic
		max-width 370px
		padding 20px
		background-color #fff
		border-radius 10px
		position relative

		&:after
			content ''
			width 20px
			height 10px
			border 20px solid transparent 
			border-top 20px solid #ffffff
			position absolute
			bottom -30px
			left 50%
			transform translateX(-50%)


.offer

	&__subtitle
		max-width 820px

.form

	&__button-price
		width 100%

	&__policy
		display inline-block
		margin-top 25px
		margin-left 45px	


.factory

	&__title
		margin-bottom 100px

.factory-block
	display flex
	justify-content center
	align-items center 
	flex-wrap wrap

	&__text
		flex-basis 50%
		margin-left 60px
		font-size 20px

	&__image
		margin 20px 0

.contacts
	background-color #f6f7f9

	&__title
		margin-bottom 100px
	
	.container
		height 300px

.contacts-block
	display flex
	justify-content space-between
	flex-wrap wrap

	&__item
		margin-bottom 10px
		text-align center

	&__image
		margin-bottom 25px
	
	&__text
		font-size 16px

		&:hover
			font-size 20px
	
	&__link
		text-decoration none
		color #000000
	
.questions-block
	display flex 
	align-items center
	justify-content space-between
	margin auto
	max-width 800px
		
	&__title
		font-size 30px

+below(md-breakpoint)

	.main-bg
		padding-left 20px
		background-size 100%
		background-position 0px left

	.price-block
		justify-content center 

	.price-card
		margin 20px

	.step-block
		flex-wrap wrap 

		&__item
			flex-basis 33%
			&:before
				display none

			
+below(lg-breakpoint)
	.offer-block
		background-position center right -120px
		
	.catalog-block
		justify-content center

		&__item
			max-width 470px

	.blog-header
		padding 0 20px

		&__title
			font-size 16px
		
		&__link
			font-size 12px


	.blog-list
		justify-content center

		&__item
			margin-right 30px
			margin-left 30px

	.slider-block
		flex-wrap wrap
		justify-content center 
		align-items center 
		text-align center

		&__item
			flex-basis 100%

		&__text
			left 50%
			transform translateX(-50%)

	.questions-block
		padding 0 10px

+below(sm-breakpoint)

	.form
		.checkbox-row
				flex-direction row
		
		.input
			margin-bottom 20px

		&__row
			flex-direction column

		&__group
			flex-basis 100%
			width 100%	

	.feature-block
		&__item
			flex-basis 50%
	
	.step-block
	
		&__item
			flex-basis 50%


+below(xs-breakpoint)
	.title
		margin-bottom 50px
	.section
		padding 60px 0 

	.offer
		.container
			padding 40px
	
	.feature-block
		&__item
			flex-basis 100%
			margin-bottom 50px

	.catalog-button

		&__button
			font-size 10px

	.step-block
		
			&__item
				flex-basis 100%

	.form
		&__button-price.button
			padding 28px 5px
			margin-top 0px

		&__button-price
			font-size 13px

	.contacts-block

		&__item
			flex-basis 100%