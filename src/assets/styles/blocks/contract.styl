.contract
  padding 50px 0 70px
  background-image url('../images/contract-bg.png')
  background-size cover
  background-position center
  background-repeat no-repeat

  &__title
    font-family font-family-Xbold
    font-size 42px
    line-height 1.2
    color #ffffff
    text-transform uppercase
    text-align center

  &__subtitle
    font-family font-family-reg
    font-size 22px
    line-height 1.4
    color #ffffff
    text-align center

  &__form
    max-width 840px
    width 100%
    margin 25px auto 0

  +below(xs-breakpoint)
    padding 20px 0
    position relative
    background transparent

    &:before
      width 100%
      position absolute
      top 0
      left 0
      height 38.5%
      background #2a8cff
      display block
      content ''

    &__title
      font-size 22px
      line-height 1.5

    &__subtitle
      font-size 18px

.form
  width 100%
  background #fff
  box-shadow 0 10px 40px rgba(8, 32, 59, 0.13)
  padding 40px 50px

  &__row
    & + &
      margin-top 15px

    & + &--checkbox
      margin-top 20px

    & + &--btn
      margin-top 35px

    &--btn
      display flex
      justify-content center
      width 100%

      .btn
        min-width 190px

    &--between
      display flex
      align-items center
      justify-content space-between

      .form__item
        width calc(50% - 10px)

  +below(xs-breakpoint)
    padding 20px 30px 35px

    &__row
      &--checkbox
        padding-right 40px

      &--btn
        .btn
          width 100%

      &--between
        flex-direction column
        width 100%

        .form__item + .form__item
          margin-top 10px

        .form__item
          width 100%

      & + &
        margin-top 10px

    .form__row+.form__row
      margin-top 10px

    .form__row+.form__row--btn
      margin-top 20px

    .checkbox
      input
        display none

      line-height 22px

.input-main
  font-family font-family-reg
  width 100%
  border-radius 3px
  background-color #f5f7fa
  border 1px solid #d2d6dc
  height 45px
  placeholder-color(#818387)
  placeholder-size(14px)
  font-size 16px
  line-height 17px
  padding 10px 17px

.textarea-main
  font-family font-family-reg
  width 100%
  border-radius 3px
  background-color #f5f7fa
  border 1px solid #d2d6dc
  height 45px
  placeholder-color(#818387)
  placeholder-size(14px)
  font-size 16px
  line-height 17px
  padding 10px 17px
  resize none
  height 90px

.checkbox
  font-family font-family-reg
  font-size 16px
  line-height 19px
  position relative

  &__input
    opacity 0
    width 0.1px

  &__label
    position relative
    padding-left 25px
    margin 0
    cursor pointer

    &:before
      content ''
      border-radius 3px
      border 1px solid #d2d6dc
      background #f5f7fa
      width 15px
      height 15px
      position absolute
      top 1px
      left 0

    &:after
      content "\2713"
      position absolute
      top 0
      left 4px
      color alpha(#212121,.9)
      font-size 12px
      opacity 0
      transition opacity .2s

  input:checked + label:after
    opacity 1

.select
  position relative
  select
    font-family font-family-reg
    display block
    width 100%
    font-size 16px
    line-height 17px
    padding 10px 25px 10px 17px
    vertical-align: top
    -webkit-appearance: none
    -moz-appearance: none
    -ms-appearance: none
    appearance: none !important
    border-radius 3px
    background-color #f5f7fa
    border 1px solid #d2d6dc
    height 45px
    outline none
    position relative

  &:before
    content ''
    background-image url('../images/select-arrow.png')
    background-size contain
    background-position center
    background-repeat no-repeat
    position absolute
    top 14px
    right 10px
    width 7px
    height 14px
    z-index 1

.list-info
  display flex
  padding 60px 0

  &__item
    width 25%

  +below(lg-breakpoint)
    flex-wrap wrap

    &__item
      padding 20px
      width 50%

  +below(sm-breakpoint)
    padding 20px 0 35px
    flex-direction column
    width 100%

    &__item
      width 100%
      margin-bottom 35px
      padding 0

      &:last-child
        margin-bottom 0

.contract-info
  display flex
  align-items center

  &__icon
    display flex
    align-items center
    justify-content center
    width 68px
    height 68px
    border-radius 50%
    background-color #eff3f9
    margin-right 20px

  &__title
    font-family font-family-reg
    color #82868a
    font-size 16px
    line-height 30px

  &__phone
    font-family font-family-Xbold
    font-size 18px
    line-height 1.2

  &__text
    font-family font-family-reg
    font-size 18px
    line-height 1.2

  &__email
    font-family font-family-reg
    font-size 18px
    line-height 1.2
    color #2a8cff
    text-decoration underline

  +below(sm-breakpoint)
    justify-content center

    &__content
      min-width 184px
