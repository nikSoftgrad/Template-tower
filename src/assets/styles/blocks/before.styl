.before

  &__title
    margin-bottom 100px

  &-slider
    &-wrap
      position relative
      max-width 640px
      margin 0 auto
      position relative
    
    // &-arrows
    //   z-index -1
    //   position absolute
    //   top 50%
    //   width 100%
    //   transform translateY(-100%)

    &__dots
      margin auto
      display flex
      justify-content center 
      align-items center
      list-style none
      padding 0
      margin-top 25px

      li
        width 10px
        height 10px
        background-color #d1d1d1
        border-radius 50%
        margin 5px

        &:hover
          cursor pointer

        &.slick-active
          background-color #5b7fda
      button 
        display none
  
.arrow
  background-color transparent
  border none
  
  &:focus
    outline none

  &-left
    top 50%
    transform translateY(50%)
    position absolute
    transform translateX(-600%)
    &:hover
      box-shadow 0 10px 25px rgba(0,0,0,0.2)

  &-right
    position absolute
    top 50%
    transform translateY(50%)
    transform translateX(800px)
    &:hover
      box-shadow 0 10px 25px rgba(0,0,0,0.2)