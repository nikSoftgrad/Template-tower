.input-block
  width 100%
  display flex
  align-items center
  background #fff
  box-shadow 0 10px 40px rgba(8, 32, 59, 0.13)
  padding 20px 35px

  &__item
    min-width 170px

    & + &
      margin-left 10px

    &--btn
      .btn
        width 100%
        height 100%

  +below(lg-breakpoint)
    flex-direction column
    width 500px
    padding 20px 30px 25px

    &__item
      width 100%

    .input-block__item+.input-block__item
      margin-left 0
      margin-top 10px

  +below(xs-breakpoint)
    width 100%

.input-icon
  display block
  position relative

  &__icon
    position absolute
    top 50%
    left 15px
    height 18px
    transform translateY(-50%)
    img
      height 100%
      display flex

    &--flight
      .icon
        position relative
        transform rotate(45deg)
        fill #9ebde1
        height 18px
        width 17px

    &--earth
      .icon
        fill #9ebde1
        height 18px
        width 18px

    &--place
      .icon
        fill #9ebde1
        height 18px
        width 15px

    &--calendar
      .icon
        fill #9ebde1
        height 18px
        width 15px

  input
    width 100%
    border-radius 3px
    background-color #f5f7fa
    border 1px solid #d2d6dc
    height 45px
    placeholder-color(#818387)
    font-size 14px
    line-height 17px
    padding 10px 10px 10px 43px
