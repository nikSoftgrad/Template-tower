.footer
	padding 40px 0
	background-color #262626
	color #fff

.footer-block
	display flex
	justify-content space-between

	a
		color #ffffff
		text-decoration none
	
	&__title
		margin-top 8px
		text-transform uppercase
		font-size 18px
		font-width 500
	
	&__subtitle
		margin-bottom 48px
		display block

	&__copy
		color #767676
	
	&__pay-logo
		margin 15px
		cursor pointer
	
	&__contacts
		text-align right
	
	&__phone
		display block
		margin-bottom 20px
		font-size 20px
		font-width 500
	
	&__mail
		display block
		margin-bottom 20px

	&__image
		margin-left 10px
	
@media (max-width 768px)

	.footer-block
		flex-direction column
		align-items center
		text-align center
		
		&__contacts 
			text-align center
			margin-top 30px