.user-data
  padding 48px 0 43px
  background-color #f4f7fb

  .container
    display flex
    justify-content space-between
    align-items flex-end
    width 100%

  &__row
    display flex
    align-items flex-end

    & + &
      margin-top 25px

  &__title
    font-family font-family-Xbold
    font-size 26px
    line-height 19px
    text-transform uppercase

    & + .user-data__link
      margin-left 35px

  &__link
    font-family font-family-reg
    text-transform uppercase
    text-decoration underline
    color #2a8cff
    font-size 12px
    line-height 13px

    &:hover
      color #2a8cff
      text-decoration none

  &__item
    display flex
    align-items center

    & + &
      margin-left 70px

  &__icon
    margin-right 13px

  &__text
    font-family font-family-reg
    font-size 17px
    line-height 15px

  +below(md-breakpoint)
    padding 27px 0 35px

    &__left
      width 100%

    &__title
      font-size 22px
      line-height 1.5

    &__icon
      width 35px
      display flex
      justify-content center
      margin-right 10px
      flex-shrink 0

    &__row
      width 100%
      justify-content space-between
      flex-wrap wrap
      align-items center

    &__item
      width 100%
      justify-content flex-start

    .user-data__item+.user-data__item
      margin-left 0
      margin-top 17px

    .container
      flex-direction column
      align-items start

    &__right
      margin-top 25px

    &__text
      word-break break-all
