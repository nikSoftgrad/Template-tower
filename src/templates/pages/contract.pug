extends ../layouts/main

block content

  +b.page--contract
    +e.row
      +b.contract
        .container
          +e.title contact us
          +e.subtitle Send us your doubts
          +e.form
            +b.FORM.form
              +e.row
                .select
                  select
                    option(value="test1") test1
                    option(value="test2") test2
                    option(value="test3") test3
                    option(value="test4") test4

              +e.row--between
                +e.item
                  input(type="text" placeholder="Name").input-main
                +e.item
                  input(type="text" placeholder="Last name").input-main

              +e.row--between
                +e.item
                  input(type="text" placeholder="E-mail").input-main
                +e.item
                  input(type="text" placeholder="Phone").input-main

              +e.row
                textarea(placeholder="Message").textarea-main

              +e.row--checkbox
                +b.checkbox
                  +e.INPUT(type="checkbox" id="accept").input
                  +e.LABEL(for="accept").label I accept the Data and Privacy Policy

              +e.row--btn
                +b.BUTTON.btn--lg
                  span send message

    +e.row
      .container
        +b.list-info
          +e.item
            +b.contract-info
              +e.icon
                img(src="assets/images/phone.png")
              +e.content
                +e.title Phone number
                +e.phone +7 (567) 000-90-90

          +e.item
            +b.contract-info
              +e.icon
                img(src="assets/images/place.png")
              +e.content
                +e.title Address
                +e.text London, Rous street 34

          +e.item
            +b.contract-info
              +e.icon
                img(src="assets/images/envelope.png")
              +e.content
                +e.title E-mail
                +e.email airlegal@mail.com

          +e.item
            +b.contract-info
              +e.icon
                img(src="assets/images/wall-clock.png")
              +e.content
                +e.title Time work
                +e.text 9 a.m .to 10 p.m.



